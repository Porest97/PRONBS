@model PRONBS.Models.ViewModels.DataViewModel
@{
    ViewData["Title"] = "ListPlansCreated";
}
    <div class="badge">
        <h1>Plans - Created</h1>
        
        <a class="btn btn-sm btn-success" asp-controller="Plans" asp-action="Create">Create new Plan</a>
        <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Prospecting">Back to Prospecting</a>
        <a class="btn btn-sm btn-success" asp-controller="Plans" asp-action="IndexSearch">To Plans ALL - INC# Search</a>

        <table class="table table-responsive-sm table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Plans[0].Incident)</th>
                    <th>@Html.DisplayNameFor(model => model.Plans[0].PlanDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.Plans[0].PlanStatus)</th>
                    @*<th>@Html.DisplayNameFor(model => model.Plans[0].Stage1)</th>
                    <th>@Html.DisplayNameFor(model => model.NABLogs[0].Hours)</th>
                    <th>@Html.DisplayNameFor(model => model.NABLogs[0].TotalCost)</th>
                    <th>@Html.DisplayNameFor(model => model.NABLogs[0].WLog.WLNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.NABLogs[0].NABLogStatus)</th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Plans.OrderBy(p => p.Incident.IncidentNumber))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Incident.IncidentNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.PlanDescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.PlanStatus.PlanStatusName)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.DateTimeEnded)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hours)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalCost)</td>
                        <td>@Html.DisplayFor(modelItem => item.WLog.WLNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.NABLogStatus.NABLogStatusName)</td>*@
                        <td>
                            <a class="btn btn-sm btn-success" asp-controller="Plans" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-success" asp-controller="Plans" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            @*<a class="btn btn-sm btn-danger" asp-controller="NABLogs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>