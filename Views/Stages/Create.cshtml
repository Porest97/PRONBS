@model PRONBS.Models.DataModels.Stage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StageStatusId" class="control-label"></label>
                <select asp-for="StageStatusId" class ="form-control" asp-items="ViewBag.StageStatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListStages">Back to Stages</a>
</div>

