@model PRONBS.Models.ViewModels.PlanCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanDescription" class="control-label"></label>
                <input asp-for="PlanDescription" class="form-control" />
                <span asp-validation-for="PlanDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncidentId" class="control-label"></label>
                <select asp-for="IncidentId" class="form-control" asp-items="ViewBag.IncidentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId" class="control-label"></label>
                <select asp-for="StageId" class="form-control" asp-items="ViewBag.StageId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId1" class="control-label"></label>
                <select asp-for="StageId1" class="form-control" asp-items="ViewBag.StageId1"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId2" class="control-label"></label>
                <select asp-for="StageId2" class="form-control" asp-items="ViewBag.StageId2"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId3" class="control-label"></label>
                <select asp-for="StageId3" class="form-control" asp-items="ViewBag.StageId3"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId4" class="control-label"></label>
                <select asp-for="StageId4" class="form-control" asp-items="ViewBag.StageId4"></select>
            </div>
            <div class="form-group">
                <label asp-for="StageId5" class="control-label"></label>
                <select asp-for="StageId5" class="form-control" asp-items="ViewBag.StageId5"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanStatusId" class="control-label"></label>
                <select asp-for="PlanStatusId" class="form-control" asp-items="ViewBag.PlanStatusId"></select>
            </div>
            <div class="form-group row">
                <label asp-for="Drawings" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input multiple asp-for="Drawings" class="form-control custom-file-input" />
                        <label class="custom-file-label">Chose File....</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>

            @section Scripts{ 
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-lable').html(fileName);
                        });
                    
                </script>

            }

        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-controller="Plans" asp-action="ListPlansCreated">Back to Plans</a>
</div>

