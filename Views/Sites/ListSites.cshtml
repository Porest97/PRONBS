@model PRONBS.Models.ViewModels.DataViewModel
@{
    ViewData["Title"] = "ListSites";
}
<div class="badge">
    <h1>Sites</h1>
    <a class="btn btn-sm btn-success" asp-controller="Sites" asp-action="Create">Create new site</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Admin">Back to Admin</a>


    <table class="table table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].SiteNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].SiteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].Contact1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].Contact2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].SiteStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sites[0].Company)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sites.OrderBy(p => p.SiteNumber))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SiteNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SiteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact1.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact2.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SiteStatus.SiteStatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-controller="Sites" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-success" asp-controller="Sites" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Sites" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>